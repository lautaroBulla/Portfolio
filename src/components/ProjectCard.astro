---
const { t, img, name } = Astro.props;
---

<article>
  <div class="front">
    <img src={img} />
    <div class="background-text">
      <h2>{name}</h2>
    </div>
  </div>
</article>

<style>
  article {
    position: relative;
    width: 100%;
    height: 400px;
    border-radius: 5px;
    overflow: hidden;
  }
  .front {
    width: 100%;
    height: 100%;
  }
  .front img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: top;
    display: block;
  }
  .front .background-text {
    position: absolute;
    bottom: 0.5rem;
    left: 0.5rem;
    width: fit-content;
    border-radius: 5px;
    background: rgba(var(--color-background-rgb), 0.8);
  }
  .front .background-text h2 {
    font-weight: 700;
    opacity: 1;
  }
</style>