---
import Line from '../assets/icons/line.svg';
import Line2 from '../assets/icons/line.svg';

const { href, class:className, title } = Astro.props;
---

<li>
  <a href={href} class={className}>
    <Line2 class="line" />
    <p>{title}</p>
  </a>
</li>

<style>
  a {
    position: relative;
    display: flex;
    align-items: center;
    text-decoration: none;
    gap: 0.5rem;
    transition: transform 0.1s ease-in-out;
    position: relative;
  }
  a:active {
    transform: scale(1.1);
  }
  a:active .line {
    display: block;
    stroke-dasharray: 170;
    stroke-dashoffset: 170;
    animation: fillLine 0.6s ease-in-out forwards;
  }
  a.active {
    transform: scale(1.1);
  }

  .line {
    display: none;
    position: absolute;
    left: 0;
    top: 70%;
    transform: translateY(-50%);
    width: 85%;
  }
  .line.active {
    display: block;
    stroke-dasharray: 170;
    stroke-dashoffset: 170;
    animation: fillLine 0.6s ease-in-out forwards;
  }
  @keyframes fillLine {
    to {
      stroke-dashoffset: 0;
    }
  }

  p {
    margin-left: 1.7rem;
  }

  @media (min-width: 1024px) {
    a:hover {
    transform: scale(1.1);
    }
    a:hover .line {
      display: block;
      stroke-dasharray: 170;
      stroke-dashoffset: 170;
      animation: fillLine 0.6s ease-in-out forwards;
    }
  }
</style>