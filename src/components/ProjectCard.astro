---
import Link from '../assets/icons/link.svg';
import Github from '../assets/icons/github.svg';

const { t, img, name, company, description, stack, github, link } = Astro.props;
---

<article>
  <div class="front">
    <img src={img} />
    <div class="background-text">
      <h2>{name}</h2>
    </div>
  </div>

  <div class="back">
    <h2>{name}</h2>
    <p class="company">{company}</p>
    <p class="description">{description}</p>
    <div class="stack">
      <p>Stack:</p>
      {stack && stack.length > 0 && (
        stack.map((Icon:any) => <Icon />)
      )}
    </div>  
    <div class="links">
      {github && (
        <div class="links-container">
          <a href={github} target="_blank" rel="noopener noreferrer">
            <Github />
          </a>
        </div>
      )}

      {link && (
        <div class="links-container">
          <a href={link} target="_blank" rel="noopener noreferrer">
            <Link />
          </a>
        </div>
      )}
    </div>
  </div>
</article>

<style>
  article {
    position: relative;
    width: 100%;
    height: 400px;
    border-radius: 5px;
    overflow: hidden;
  }
  .front {
    display: none;
    width: 100%;
    height: 100%;
  }
  .front img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: top;
    display: block;
  }
  .front .background-text {
    position: absolute;
    bottom: 0.5rem;
    left: 0.5rem;
    width: fit-content;
    border-radius: 5px;
    background-color: var(--color-background);
  }
  .front .background-text h2 {
    padding-inline: 0.5rem;
    font-weight: 700;
  }

  .back {
    background-color: var(--color-background-dark);
    width: 100%;
    height: 100%;
    padding: 1rem;
    text-align: left;
    position: relative;
  }
  .back h2 {
    font-size: 1.2rem;
    font-weight: 700;
    margin: 0;
  }
  .back p {
    font-size: 0.9rem;
  }
  .company {
    font-style: italic;
  }
  .description {
    margin-block: 1.3rem;
  }
  .stack {
    display: flex;
    align-items: center;
    gap: 1rem;
  }
  .links {
    position: absolute;
    bottom: 1rem;
    left: 0;
    right: 0;
    padding-inline: 1rem;
    display: flex;
  }
  .links-container {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
  }
  .links-container a {
    all: unset;
  }
</style>