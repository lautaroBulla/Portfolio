---
const { title, icons } = Astro.props;
---

<article>
  <div class="card">
    <h3>{title}</h3>
    <div class="technologies">
      {icons && icons.length > 0 && (
        icons.map((Icon:any) => 
          <div class="technology">
            <Icon.svg />
            <p>{Icon.name}</p>
          </div>
        )
      )}
    </div>  
</article>

<style>
  article {
    width: 100%;
    height: 100%;
  }

  .card {
    position: relative;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    background: linear-gradient(var(--color-background-dark), var(--color-background));
    padding: 1rem;
    border-radius: 5px;
    box-shadow: 0px 3px 18px 3px rgba(0, 0, 0, 0.2);
  }

  h3 {
    font-weight: 700;
    margin-bottom: 1rem;
    text-decoration: underline;
  }

  .technologies {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    row-gap: 1.5rem;
    column-gap: 1rem;
    width: 100%;
  }
  .technologies svg {
    width: 2rem;
    height: auto;
    aspect-ratio: 1;
  }
  .technologies p {
    font-size: 0.8rem;
  }
  .technology {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 0.5rem;
  }

  @media (min-width: 768px) {
    .technologies svg {
      width: 2.3rem;
    }
    .technologies p {
      font-size: 0.9rem;
    }
  }
</style>